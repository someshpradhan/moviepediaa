<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refreshdetails"
    xmlns:android="http://schemas.android.com/apk/res/android">

<ScrollView

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Moviedetails2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imagedetails"
            android:scaleType="fitXY"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/cardview"
            android:layout_marginTop="260dp"
            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/namedetails"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/languagedetails"
                android:layout_marginTop="36dp"
                android:text=""
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/durationdetails"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="71dp"
                android:text=""
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="12sp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new1tails"
                android:layout_marginTop="53dp"
                android:text=""
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="12sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/new2details"
                android:layout_marginTop="53dp"
                android:layout_marginLeft="150dp"
                android:text=""
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="12sp"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/overviewdetails"
                android:layout_marginTop="96dp"
                android:layout_marginLeft="10dp"
                android:text=""
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="15sp"
                />

            </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/castdetails"
            android:textColor="#534A4A"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/cardview"
            android:text=""
            android:layout_marginLeft="7dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="25sp"
            />



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_below="@+id/castdetails"
            android:id="@+id/ytplayer"
            android:layout_height="wrap_content" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/videodetails"
            android:textColor="#534A4A"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/ytplayer"
            android:text=""
            android:layout_marginLeft="7dp"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/videodetails"
            android:id="@+id/videorecycle"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/similardetails"
            android:textColor="#534A4A"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/videorecycle"
            android:text=""
            android:layout_marginLeft="7dp"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/similardetails"
            android:id="@+id/similarrecycle"
            />



    </RelativeLayout>








</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>